<template>
    <div id="Talent">
        <MyHeader :title="'人才库'"/>
        <!-- 人才列表 -->
        <div class="attractions">
            <div class="item" v-for="(item , index) in list" :key="index" @click="handleFunc(item)">
                <img class="left" :src="item.showImg"/>
                <div class="right">
                    <div class="title single">
                        <p>{{item.able_name}}</p>
                        <p>#{{item.label}}</p>
                    </div>
                    <div class="about multiLine">{{item.able_content}}</div>
                    <div class="numberPeople">{{item.create_date | formatTime}}</div>
                </div>
            </div>
        </div>
        <i class="iconfont add" @click="add()">&#xe61c;</i>
    </div>
</template>

<script>
    import MyHeader from "../../components/public/MyHeader";
    import { Dialog } from 'vant';
    import {getCollege} from "@/apis";
    export default {
        name: "Talent",
        data() {
            return {
                list:[],
            }
        },
        methods: {
            getCollege(){
                getCollege({
                    url:"/able/person/getList",
                    data:{
                        talent_type:2
                    }
                }).then(msg => {
                    if(~~msg.code === 0 && ~~msg.status === 200){
                        msg = msg.data.list;
                        msg.forEach(item => {
                            if(item.able_pic && item.able_pic !== "null"){
                                item.showImg = item.able_pic.split(",")[0];
                            }else {
                                item.showImg = require("../../assets/img/noImg.png");
                            }
                        })
                        this.list = msg;
                    }else {
                        //获取失败
                        this.GToast({message:"获取新闻失败"});
                    }
                })
            },
            handleFunc(item){
                this.$router.push({path:'/TalentDetails.html',query:{ id:item.able_id}});
            },
            add(){
                this.$router.push({path:'/ApplyTalent.html'})
            }
        },
        filters:{
            formatTime(date){
                date = new Date(date);
                const year = date.getFullYear();
                const month = date.getMonth() + 1;
                const day = date.getDate() ;
                return `${year}/${month}/${day}`;
            }
        },
        components: {
            MyHeader,
            Dialog
        },
        created() {
            this.getCollege()
        },
    }
</script>

